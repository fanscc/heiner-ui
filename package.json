{
  "name": "vscode-heiner-helper",
  "displayName": "vscode-heiner-helper",
  "description": "A vscode extension for heiner-UI",
  "version": "0.5.6",
  "publisher": "ElemeFE",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElemeFE/vscode-heiner-helper"
  },
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:jade",
    "onLanguage:pug",
    "onCommand:heiner-helper.searchUnderCursor"
  ],
  "main": "./out/src/extension",
  "icon": "heiner.png",
  "contributes": {
    "commands": [
      {
        "command": "heiner-helper.searchUnderCursor",
        "title": "heiner-helper.search"
      }
    ],
    "keybindings": [
      {
        "command": "heiner-helper.searchUnderCursor",
        "key": "ctrl+cmd+z",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/heiner.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "heiner Helper Configuration",
      "properties": {
        "heiner-helper.language": {
          "type": "string",
          "default": "zh-CN",
          "description": "Document Language of heiner UI",
          "enum": [
            "zh-CN",
            "en-US",
            "es"
          ]
        },
        "heiner-helper.version": {
          "type": "string",
          "default": "2.4",
          "description": "Document version of heiner UI",
          "enum": [
            "1.4",
            "2.0",
            "2.1",
            "2.2",
            "2.3",
            "2.4",
            "2.5"
          ]
        },
        "heiner-helper.indent-size": {
          "type": "number",
          "default": 2,
          "description": "Indentation size of snippets"
        },
        "heiner-helper.quotes": {
          "type": "string",
          "default": "double",
          "description": "Normal quotes of autocomplete",
          "enum": [
            "single",
            "double"
          ]
        },
        "heiner-helper.pug-quotes": {
          "type": "string",
          "default": "single",
          "description": "Pug quotes of autocomplete",
          "enum": [
            "single",
            "double"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^5.2.0",
    "typescript": "^2.0.3",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.1",
    "heiner-new": "^0.1.0",
    "hoek": "^5.0.3",
    "jquery": "^3.2.1",
    "pretty": "^2.0.0",
    "shelljs": "^0.7.8"
  }
}
